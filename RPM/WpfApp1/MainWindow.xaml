<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="LV1" Margin="200,10,200,200">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Add_B" Content="Add" HorizontalAlignment="Left" Margin="200,321,0,0" VerticalAlignment="Top" Width="60" Height="30" Click="Add_B_Click"/>
        <Button x:Name="Del_B" Content="Delete" Margin="540,321,200,0" Height="30" VerticalAlignment="Top" Click="Del_B_Click"/>
        <Button x:Name="Clear_B" Content="Clear" Margin="370,0,370,83" VerticalAlignment="Bottom" Height="30" Click="Clear_B_Click"/>
    </Grid>
</Window>
